<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/app_background_color"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/llFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/activity_margin_extra_large"
            android:layout_marginRight="@dimen/activity_margin_extra_large"
            android:animateLayoutChanges="true"
            android:background="@drawable/login_card_bg"
            android:orientation="vertical"
            android:padding="@dimen/activity_margin"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/activity_margin"
                android:gravity="center"
                android:padding="@dimen/activity_margin_small"
                android:text="Vehicle Tracking System"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_background"
                android:inputType="textEmailAddress"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_medium"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:text="Password"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_background"
                    android:inputType="textPassword"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/tvShowHide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/etPassword"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/etPassword"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="@dimen/activity_margin_small"
                    android:paddingRight="@dimen/activity_margin_small"
                    android:text="SHOW"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_extra_small" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingBottom="@dimen/activity_margin_small"
                android:paddingEnd="0dp"
                android:paddingLeft="@dimen/activity_margin_small"
                android:paddingRight="0dp"
                android:paddingStart="@dimen/activity_margin_small"
                android:paddingTop="@dimen/activity_margin_small"
                android:text="Forgot Password"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_margin"
                android:background="@drawable/circle_button"
                android:gravity="center"
                android:padding="@dimen/activity_margin_small"
                android:text="LOGIN"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>